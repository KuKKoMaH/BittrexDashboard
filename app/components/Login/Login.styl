@import '../../styles/vars.styl'

.wrapper
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center

.form
  display: block
  border: 1px solid #c0c0c0
  border-radius: 4px
  padding: 8px
  box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.2)

.title
  text-align: center
  font-size: 24px
  margin: 0 0 16px
  padding: 0

.input
  display: block
  border-radius: 2px
  box-shadow: none
  border: 1px solid #c0c0c0
  outline: 0
  margin: 0 0 8px
  padding: 4px
  font-size: 16px
  text-align: center
  width: 330px
  anim()

  &:focus
    border-color: #777777

.button
  display: block
  font-size: 14px
  height: 30px
  border-radius: 2px
  width: 100%
  background-color: #dddddd
  outline: 0
  border: 0
  anim()

  &:active
    background: #c0c0c0