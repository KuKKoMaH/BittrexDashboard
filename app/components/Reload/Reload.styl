@import '../../styles/vars.styl'

.button
  border: 0
  padding: 0
  margin: 0
  border-radius: 0
  width: 50px
  height: 50px
  outline: 0
  font-size: 20px
  cursor: pointer
  background: $secondary
  color: lighten($secondary, 50%)
  anim()

  &:hover
    background: darken($secondary, 10%)

  &:active, &.active
    background: darken($secondary, 30%)