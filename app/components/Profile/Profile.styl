@import '../../styles/vars.styl'

.wrapper
  position: relative

.button
  border: 0
  padding: 0
  margin: 0
  border-radius: 0
  width: 50px
  height: 50px
  outline: 0
  font-size: 20px
  cursor: pointer
  background: $secondary
  color: lighten($secondary, 50%)
  anim()

  &:hover
    background: darken($secondary, 10%)

  &:active, &.active
    background: darken($secondary, 30%)

.form
  position: absolute
  top: 100%
  right: 0
  background: $primary
  padding: 18px 12px

.title
  font-size: 24px
  margin: 0 0 12px

.input
  display: block
  border-radius: 2px
  box-shadow: none
  border: 1px solid #c0c0c0
  outline: 0
  margin: 0 0 8px
  padding: 4px
  font-size: 16px
  text-align: center
  width: 330px
  anim()

  &:focus
    border-color: $secondary


.submit
  border: 0
  padding: 0
  border-radius: 0
  outline: 0
  font-size: 20px
  height: 40px
  width: 100%
  cursor: pointer
  background: $secondary
  color: lighten($secondary, 50%)
  anim()

  &:hover
    background: darken($secondary, 10%)

  &:active, &.active
    background: darken($secondary, 30%)
